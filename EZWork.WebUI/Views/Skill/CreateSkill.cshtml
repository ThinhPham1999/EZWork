
@model EZWork.Core.Entities.Skill

@{
    ViewBag.Title = "Create Skill";
}

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Name Skill:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-group", @placeholder = "Skill Name" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Description:</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-group", })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Url Link:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.UrlSlug, new { @class = "form-group", @placeholder = "linkUrl" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Url Link:</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("CareerId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <button class="col-2 form-group btn btn-success" value="CreateSkill">Save$Submit</button>
                </div>
            </form>
        </div>
        @Html.ActionLink("Back", "Index")
    }

</div>