@model IEnumerable<EZWork.Core.Entities.Seller>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.ImageProfile)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.EZUser.ModifierAt)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.Status)
            </th>
            <th>
                @Html.DisplayNameFor(t => t.CreateAt)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.BirthDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.ImageProfile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.CreateAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EZUser.ModifierAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateAt)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateProfile", new { id = item.SellerId })

        </td>
    </tr>
        }
    </table>
</div>

