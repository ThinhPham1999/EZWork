@using EZWork.Core.Entities
@model EZUser
@{
    ViewBag.Title = "Create Profile";
}

<div class="container">


    @using (Html.BeginForm())
    {
        <div class="container">
            <div class="form-group">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">FullName:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-group", @placeholder = "FullName" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Gender:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Gender, new { @class = "form-group", @placeholder = "Gender" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Birthday:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.BirthDay, new { @class = "form-group", @type = "date" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Image Profile:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.ImageProfile, new { @class = "form-group", @type = "file" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-group", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">PhoneNumber:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-group", @placeholder = "Phonenumber" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">ShortDescription:</label>
                        <div class="col-10">
                            @Html.TextAreaFor(x => x.Seller.ShortDescription, new { @class = "form-group", @rows = "10", @cols = "100" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Status:</label>
                        <div class="col-10">
                            @Html.TextBoxFor(x => x.Seller.Status, new { @class = "form-group", })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Skills:</label>
                        <div class="col-10">
                            @Html.TextBoxFor(x => x.Seller.Status, new { @class = "form-group", })
                            @Html.TextBoxFor(x => x.Seller.Status, new { @class = "form-group", })
                        </div>
                    </div>

                    <div class="form-group row">
                        <button class="col-2 form-group btn btn-success">Save$Submit</button>
                        <button class="col-2 btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
        @Html.ActionLink("Back", "ViewProfile")
    }

</div>
