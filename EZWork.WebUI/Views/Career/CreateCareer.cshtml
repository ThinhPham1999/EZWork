@model EZWork.Core.Entities.Career

@{ 
    ViewBag.Title = "CreateCareer";
}

<div class="container">
    @using (Html.BeginForm())
    {
            <div class="form-group">
                <form>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Name:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-group", @placeholder = "CareerName" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Description:</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-group", })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Url Link:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.UrlSlug, new { @class = "form-group", @type = "linkUrl" })
                        </div>
                    </div>             
                    <div class="form-group row">
                        <button class="col-2 form-group btn btn-success">Save$Submit</button>
                        <button class="col-2 btn btn-secondary">Cancel</button>
                    </div>
                </form>
            </div>
        @Html.ActionLink("Back", "Index")
    }

</div>