@model EZWork.WebUI.Areas.Admin.ViewModels.ActionSkillViewModel

    <div class="modal-content">
        <div class="modal-header">
            @if (Model.SkillId > 0)
            {
                <h4 class="modal-title">Edit Skill</h4>
            }
            else
            {
                <h4 class="modal-title">Add Skill</h4>
            }
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <form class="actionForm">
                <div class="form-group">
                    <input type="hidden" name="SkillId" value="@Model.SkillId" />
                    <label for="uname">SkillName:</label>
                    <input type="text" class="form-control" id="uname" name="SkillName" placeholder="Enter SkillName" value="@Model.SkillName">
                </div>
                <div class="form-group">
                    <label for="uname">Career:</label>
                    @if (Model.Careers != null && Model.Careers.Count > 0)
                    {
                        <select name="CareerId" class="form-control" id="exampleFormControlSelect1">
                            <option>Choose Career</option>
                            @foreach (var item in Model.Careers)
                            {
                                <option value="@item.CareerId" @(Model.CareerId == item.CareerId ? "selected" : string.Empty)>@item.Name</option>
                            }
                        </select>
                    }
                </div>
                <div class="form-group">
                    <label for="pwd">Description:</label>
                    <textarea class="form-control"  placeholder="Description" name="SkillDescription">@Model.SkillDescription</textarea>
                </div>
                <div class="form-group">
                    <label for="uname">URL Slug:</label>
                    <input type="text" class="form-control"  name="SkillUrlSlug" placeholder="Enter SkillUrlSlug" value="@Model.SkillUrlSlug">
                </div>
                <button type="submit" class="btn btn-primary" id="actionBtn">Submit</button>
            </form>
        </div>
        <div class="errorDiv"></div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div> 
    <script>
    $('#actionBtn').click(function () {
        debugger;
           $.ajax({
                url: '@Url.Action("Action","Skill")',
                data: $('.actionForm').serialize(),
                type: 'post'
            }).done(function (response) {
                debugger;
               //  window.location.href = "@Url.Action("Index", "Skill")";
                if (response.Success) {
                    swal({
                        title: "Good job!",
                        text: "You clicked the button!",
                        icon: "success",
                        button: "Aww yiss!",
                    });
                   location.reload();
                } else {
                    $('.errorDiv').html(response.Message);
                }
            }).fail(function (response) {
                alert('fail');
            })
        });

    </script>



