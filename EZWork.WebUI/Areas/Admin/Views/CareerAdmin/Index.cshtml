@model IEnumerable<EZWork.Core.Entities.Career>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h2>Career Record</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalCareer" onclick="clearTextBoxCareer();">Add New Career</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    UrlSlug
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody" id="CareerTable"></tbody>
    </table>
</div>

<div class="modal fade" id="myModalCareer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Add Career</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="EmployeeId">ID</label>
                        <input type="text" class="form-control" id="CareerId" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="CareerName" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="Age">Description</label>
                        <input type="text" class="form-control" id="CareerDescription" placeholder="Description" />
                    </div>
                    <div class="form-group">
                        <label for="State">UrlSlug</label>
                        <input type="text" class="form-control" id="CareerUrlSlug" placeholder="UrlSlug" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddCareer" onclick="AddCareer();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdateCareer" style="display:none;" onclick="UpdateCareer();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

