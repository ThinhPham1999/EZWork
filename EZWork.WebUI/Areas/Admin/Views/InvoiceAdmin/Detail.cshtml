@model EZWork.Core.Entities.Order
@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Detail Order</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label>OrderID</label>
                <input id="orderid" value="@Model.OrderId" class="form-control" />
            </div>
            <div class="form-group">
                <label>Seller</label>
                <input value="@Model.Seller.EZUser.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>User</label>
                <input value="@Model.EZUser.UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input value="@Model.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label>CreateAt</label>
                <input value="@Model.CreateAt" class="form-control" />
            </div>          
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Đóng</button>
            </div>
        </div>
    </div>
}







